[Trigger]
Operation = Upgrade
Operation = Remove
Type = Package
Target = linux

[Action]
Depends = bash
Depends = findutils
Depends = coreutils
When = PreTransaction
Exec = /usr/bin/bash -c "/usr/bin/find . -type l -exec test ! -e {} \; -delete; /usr/bin/mkdir -p /tmp/save-running-kernel-modules && /usr/bin/cp -a /usr/lib/modules/$(uname -r) /tmp/save-running-kernel-modules"
