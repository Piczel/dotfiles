npp() {
	if [ -n "$DISPLAY" ]; then
		#urxvtc -name ncmpcpp -cd $HOME -e ncmpcpp && exit
		termite --name=ncmpcpp -d $HOME -e ncmpcpp && exit
  else
		ncmpcpp
  fi
}

rgr() {
  if [ -n "$DISPLAY" ]; then
		#urxvtc -name ranger -depth 0 -bg "#202020" -cd $HOME -e ranger && exit
		termite --name=ranger -d $HOME -e ranger -c $HOME/.config/termite/config.ranger
	else
		ranger
  fi
}

alias ncmpcpp='npp'
alias ranger='rgr'

