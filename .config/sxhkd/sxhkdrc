# Volume buttons
XF86Audio{Raise,Lower}Volume
  pactl set-sink-mute 1 false && pactl set-sink-volume 1 {+,-}3% && aplay $HOME/.config/i3/audio-volume-change.wav

XF86AudioMute
  pactl set-sink-mute 1 toggle && aplay $HOME/.config/i3/audio-volume-change.wav


# Apps launchers 
super + Return
	termite

# browsers
super + shift + {Return,u}
  {firefox,luakit}

super + u
  atom

XF86MyComputer
  pcmanfm

XF86HomePage
  firefox

super + r
  dmenu_run -l 0 -x 700 -y 400 -w 450 -h 40 -fn "Roboto Medium-14" -nb "#2B2B2B" -nf "#7A7A7A" -sb "#7A7A7A" -sf "#2B2B2B" -p ">" -q -i

ctrl + shift + l
  /home/victor/.lock_screen/lock

XF86MonBrightness{Up,Down}
  xbacklight {+,-}5

super + a
  pavucontrol

super + space
  ds "$(xclip -o)"

## reload shxkd and kill bspwm
super + shift + q
  bspc quit

super + q
  pkill -USR1 -c sxhkd

# set fullscreen
super + f
  bspc node -t {fullscreen,tiled}

# swap between tiled and floating
super + x
  bspc node -t {floating,tiled}

# move and resize floating windows
#move
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# groups and co
super + {ampersand,eacute,quotedbl,apostrophe,parenleft}
  bspc desktop -f ^{1-5}

super + shift + {1-5}
  bspc node -d {I,II,III,IV,V}

