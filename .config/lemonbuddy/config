[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/top]
;monitor = eDP1
bottom = false
dock = false

width = 100%
height = 25

;offset_x = 0
;offset_y = 0

background = #00ffffff
foreground = #A2A5AC
;linecolor = #ff0000

spacing = 5
lineheight = 1

;separator = |

;locale = fr_FR.UTF-8

padding_left = 1
padding_right = 1
module_margin_left = 0
module_margin_right = 1

font-0 = Roboto:size=10;0
font-1 = FontAwesome:size=10:weight=heavy;0

modules-left = mpd
modules-center = bspwm
modules-right = pkgupdates-available wired-network wireless-network volume backlight battery clock

[module/label]
type = custom/text
content = Lemonbuddy example
content-background = #af2031
content-underline = #cf4253
content-overline = #cf4253
content-padding = 2

[module/cpu]
type = internal/cpu
label = CPU: %percentage%
format-background = #51c4d4
format-underline = #A2A5AC
;format-overline = #f75
format-padding = 2

[module/ram]
type = internal/memory
label = RAM: %percentage_used%
format-background = #42c
format-underline = #75f
format-overline = #75f
format-padding = 2

[module/clock]
type = internal/date
