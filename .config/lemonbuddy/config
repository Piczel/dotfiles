format-connected-foreground = #A2A5AC
format-connected-padding = 2

ramp-signal-0 = 
label-connected = %essid% %local_ip%

[module/wireless-network]
type = internal/network
interface = wlp4s0

format-connected = <ramp-signal> <label-connected>
format-connected-background = #252525
format-connected-foreground = #A2A5AC
format-connected-padding = 2

ramp-signal-0 = 
label-connected = %essid%

[module/pkgupdates-available]
type = custom/script

exec = count=$(checkupdates | wc -l); [ $count -gt 0 ] && echo " $count"

interval = 90
format-background = #252525
format-foreground = #A2A5AC
format-padding = 2

[module/aurupdates-available]
type = custom/script
exec = count=$(cower -u | wc -l); [ $count -gt 0 ] && echo "AUR $count"

interval = 90
format-background = #252525
format-foreground = #A2A5AC
format-padding = 2

