[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/top]
;monitor = eDP1
bottom = false
dock = false

width = 100%
height = 25

;offset_x = 0
;offset_y = 0

background = #00252525
foreground = #A2A5AC

spacing = 5
lineheight = 2

;separator = |

;locale = fr_FR.UTF-8

padding_left = 1
padding_right = 1
module_margin_left = 0
module_margin_right = 1

font-0 = Roboto:size=10;0
font-1 = FontAwesome:size=10:weight=heavy;0

modules-left = mpd
modules-center = i3
modules-right = aurupdates-available pkgupdates-available wired-network wireless-network volume backlight battery clock

[module/clock]
type = internal/date
date = %H:%M   %d/%m/%Y
format-background = #252525
format-foreground = #A2A5AC
;format-overline = #7a6
format-padding = 2

