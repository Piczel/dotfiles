#!/bin/bash

if [ -z "$1" ]; then
  echo "There is a problem Houston"
else
  
	extension=$(echo "$1" | cut -d"." -f2)
	name=$(echo ${RANDOM}).$extension
  final=/tmp/$name
  cp $1 $final

  scp -q $final root@sushi:/srv/Piczel/img/

	rm $final

	lien="http://img.piczel.tk/$name"
  echo "$lien"
	echo "$lien" | xclip -selection primary
	echo "$lien" | xclip -selection clipboard


fi


