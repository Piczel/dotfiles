<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="gladious" _name="Gladious" version="1.0">
  <author>Victor Franzi</author>
  <_description>Color scheme dark, beautiful and easy for the eyes</_description>

  <!-- Global Settings -->
  <style name="text"                        foreground="#F8F8F2" background="#222222"/>
  <style name="selection"                   foreground="#FFFFFF" background="#555555"/>
  <style name="cursor"                      foreground="#93A1A1"/>
  <style name="current-line"             			 background="#333333"/>
  <style name="line-numbers"                foreground="#BEBEBA" background="#333333"/>
  <style name="background-pattern"         			 background="#032F3B"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="#002B36" background="#586E75"/>
  <style name="bracket-mismatch"            foreground="#DC322F" background="#586E75"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="#EEE8D5" background="#93A1A1"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="#002B36" background="#B58900"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="#586E75"/>
  <style name="def:shebang"                 foreground="#586E75" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="#2AA198"/>
  <style name="def:special-char"            foreground="#859900"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="#268BD2"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="#CB4B16"/>

  <!-- Types -->
  <style name="def:type"                    foreground="#B58900" italic="true"/>

  <!-- Operators -->
  <style name="def:operator"                foreground="#859900"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="#6C71C4"/>
  <style name="def:error"                   foreground="#DC322F" bold="true"/>
  <style name="def:note"                    foreground="#D33682"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->
</style-scheme>
